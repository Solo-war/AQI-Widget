{
  "name": "aqi-widget",
  "version": "1.0.0",
  "description": "AQI Widget Electron App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.yourapp.aqi",
    "asar": true,
    "files": ["**/*", "!node_modules/.cache", "!dist", "!out"],
    "win": {
      "target": "nsis",
      "icon": "icon-51-100-512.png"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "runAfterFinish": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": false
    },
    "extraMetadata": {
      "main": "main.js"
    }
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "dotenv": "^16.0.0"
  }
}

